<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:pp="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/screen_bg"
    android:padding="24dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_back_circle_bg"
        android:contentDescription="@string/back_button"
        android:src="@drawable/ic_back_arrow"
        app:tint="@color/button_green" />

    <!-- Progress Bar (Steps) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="35dp">

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/progress_active" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/progress_active"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/progress_active"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/progress_active" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm your 4-digit PIN"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-enter your PIN to continue."
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginTop="8dp"/>

    <!-- PIN Boxes -->
    <LinearLayout
        android:id="@+id/pin_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <EditText
            android:id="@+id/pin1"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="@drawable/pin_underline_selector"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:hint="•"
            android:textColor="@color/text_primary"
            android:textColorHint="#C0C0C0"
            android:textCursorDrawable="@null"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/pin2"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="@drawable/pin_underline_selector"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:hint="•"
            android:textColor="@color/text_primary"
            android:textColorHint="#C0C0C0"
            android:textCursorDrawable="@null"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/pin3"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="@drawable/pin_underline_selector"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:hint="•"
            android:textColor="@color/text_primary"
            android:textColorHint="#C0C0C0"
            android:textCursorDrawable="@null"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/pin4"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="@drawable/pin_underline_selector"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:hint="•"
            android:textColor="@color/text_primary"
            android:textColorHint="#C0C0C0"
            android:textCursorDrawable="@null"
            android:layout_marginEnd="16dp"/>

    </LinearLayout>

    <!-- Enter Button -->
    <Button
        android:id="@+id/btn_enter"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="CONFIRM"
        android:background="@drawable/rounded_button_bg"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:backgroundTint="@color/button_green"/>
</LinearLayout>
