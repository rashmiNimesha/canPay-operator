<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_canpay_logo"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:src="@drawable/canpay_logo_green"
            android:layout_gravity="start"
            android:contentDescription="@string/canpay_logo"
            android:layout_marginBottom="36dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You're Not Assigned to a Vehicle Yet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="36dp"/>

        <!-- QR Code -->
        <ImageView
            android:id="@+id/img_qr"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="36dp"/>

        <!-- Phone Number -->
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="071 23 45 678"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/edittext_outline"
            android:padding="8dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="36dp"/>

        <!-- Instructions -->
        <TextView
            android:id="@+id/tv_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To get started, ask the vehicle owner to assign you by scanning your QR code or entering your phone number."
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
