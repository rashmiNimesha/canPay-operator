<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/img_vehicle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_bus"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_back_circle_bg"
        android:padding="12dp"
        android:contentDescription="Bus Icon" />

    <TextView
        android:id="@+id/tv_assign_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gamage is trying to assign you to bus ND-1234"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_assign_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to accept this assignment?"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btn_accept_assign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACCEPT &amp; ASSIGN"
        android:background="@drawable/rounded_button_bg"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_reject_assign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REJECT"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/button_red"
        android:background="@drawable/rounded_red_outlined_button" />
</LinearLayout>
