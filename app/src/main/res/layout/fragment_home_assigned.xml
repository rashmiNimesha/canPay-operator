<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/iv_canpay_logo"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:src="@drawable/canpay_logo_green"
                android:layout_gravity="start"
                android:contentDescription="@string/canpay_logo"
                android:layout_marginBottom="12dp" />

            <!-- Connection Message -->
            <TextView
                android:id="@+id/tv_connection_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected to vehicle ND-1234"
                android:textSize="14sp"
                android:textColor="@color/button_green"
                android:background="@drawable/bg_connection_message"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />


            <!-- Balance Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_info"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/button_green">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/iv_card_logo"
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:src="@drawable/canpay_logo"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:contentDescription="@string/canpay_logo" />

                    <TextView
                        android:id="@+id/tv_name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_below="@id/iv_card_logo"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sehan"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_below="@id/tv_name_label"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tv_bus_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BUS NUMBER"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:id="@+id/tv_bus_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ND-1234"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_below="@id/tv_bus_label"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tv_earnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="17dp" />

                    <TextView
                        android:id="@+id/tv_earnings_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today Earnings"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_below="@id/tv_earnings"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_recent_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent transactions"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_transactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- No transactions message -->
            <LinearLayout
                android:id="@+id/layout_no_transactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_no_transactions"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No transactions found!"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You havenâ€™t made any payments yet."
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
