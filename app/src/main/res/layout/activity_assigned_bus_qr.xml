    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/transparent">

        <!-- Back Button on Left -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:background="@drawable/ic_back_circle_bg"
            android:contentDescription="@string/back_button"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/button_green" />

        <!-- Title Centered -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Assigned Bus"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Logout Button on Right -->
        <ImageButton
            android:id="@+id/btn_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/logout_button"
            android:src="@drawable/ic_logout_red"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">



        <!-- QR Code -->
        <ImageView
            android:id="@+id/img_qr"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/qr_code_for_payments" />

        <!-- Bus Number Display -->
        <TextView
            android:id="@+id/tv_bus_number_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ND - 1234"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Bus Route Display -->
        <TextView
            android:id="@+id/tv_bus_route_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matara - Makumbura"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="32dp"/>

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can use this QR to receive payments from passengers."
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
