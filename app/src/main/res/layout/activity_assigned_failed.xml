<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg"
    android:padding="0dp">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/canpay_logo_green"
        android:contentDescription="@null"/>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_account_failure"
        android:contentDescription="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Assignment Failed"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#23233C"
        android:layout_marginTop="32dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We couldn't assign vehicle. Please try
again later."
        android:textSize="15sp"
        android:textColor="#888888"
        android:layout_marginTop="12dp"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="GO BACK"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/rounded_button_bg"
        android:layout_margin="24dp"
        app:backgroundTint="@color/button_green"/>
</LinearLayout>
