<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/screen_bg"
    android:padding="24dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_back_circle_bg"
        android:contentDescription="@string/back_button"
        android:src="@drawable/ic_back_arrow"
        app:tint="@color/button_green" />

    <!-- Progress Bar (Steps) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="35dp">

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/progress_active" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/progress_active"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/progress_active"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/progress_inactive" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a photo of yourself"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#23233C"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For safety reasons, we donâ€™t accept uploaded images."
        android:textSize="16sp"
        android:textColor="#888888"
        android:layout_marginBottom="32dp" />

    <!-- Circular ImageView with Camera Icon Overlay -->
    <FrameLayout
        android:id="@+id/photo_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_photo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_camera_placeholder"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_camera_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_cam"
            android:visibility="visible" />
    </FrameLayout>

    <!-- Take Photo Button -->
    <Button
        android:id="@+id/btn_take_photo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/rounded_button_bg"
        android:text="TAKE A PHOTO"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/button_green"
        android:layout_marginTop="50dp" />

    <!-- Next Button -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="NEXT"
        android:background="@drawable/rounded_button_bg"
        app:backgroundTint="@color/button_green"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:visibility="gone"
        android:enabled="false" />

    <!-- Retake Photo Button -->
    <Button
        android:id="@+id/btn_retake"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="RETAKE PHOTO"
        android:background="@drawable/rounded_outlined_button"
        app:backgroundTint="@color/button_green"
        android:textColor="@color/button_green"
        android:textAllCaps="true"
        android:visibility="gone"
        android:enabled="false" />

</LinearLayout>

